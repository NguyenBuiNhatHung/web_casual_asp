@model IEnumerable<DoAn_63134144.Models.BOOK>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutHR.cshtml";
}
<style>
    .link-black {
        color: black;
    }

    .link-black:hover {
        color: blue;
    }
    .table {
        width: 100%;
        table-layout: fixed;
        border: 1px solid black;
    }

    @@media only screen and (max-width:767px) {
        .table th,
        .table td {
            font-size: 10px;
            border: 1px solid red;
            padding: 0px;
            text-align: center;
        }
    }

    @@media only screen and (min-width:768px) {
        .table th,
        .table td {
            border: 1px solid red;
            padding: 0px;
            text-align: center;
        }
    }
</style>

<table class="table">
    <tr class="col-12">
        <th class="col-1">Ngày</th>
        <th class="col-2">Thời gian</th>
        <th class="col-1">Lương</th>
        <th class="col-1">Hỗ trợ</th>
        <th class="col-1">Vị trí</th>
        <th class="col-2">Lưu ý</th>
        <th class="col-1"> </th>
    </tr>

@foreach (var item in Model) {
    string formattedPrice = (item.Price / 1000).ToString() + "k";
    string formattedSupport = (item.Support / 1000).ToString() + "k";
    <tr>
        <td>@(((DateTime)item.Ngay).ToString("dd/MM"))</td>
        <td>Thời gian</td>
        <td>@formattedPrice</td>
        <td>@formattedSupport</td>
        <td>@item.Location</td>
        <td>@item.Note</td>
        <td>@Html.ActionLink("Dừng tuyển", "Delete", new { id = item.Id_book }, new { @class = "link-black" })</td>
    </tr>
}

</table>
