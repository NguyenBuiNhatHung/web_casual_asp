
@{
    ViewBag.Title = "ChangeTime";
    Layout = "~/Views/Shared/_layoutControl.cshtml";
}

<div class="changepassword">
    <div class="row justify-content-center mt-2 mt-md-5">
        <div class="col-md-6">
            <div class="border p-4">
                @using (Html.BeginForm("ConfirmChangeTime", "Bookcasual", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="id"></label>
                        <input type="text" class="form-control" id="id" name="id" required hidden value="@ViewBag.id">
                    </div>

                    <div class="form-group">
                        <label for="newStart">Nhập lại giờ vào:</label>
                        <input type="time" class="form-control" id="newStart" name="newStart" required>
                    </div>

                    <div class="form-group">
                        <label for="newEnd">Nhập lại giờ ra</label>
                        <input type="time" class="form-control" id="newEnd" name="newEnd" required>
                    </div>

                    <button type="submit" id="submitButton" class="btn btn-primary">Submit</button>
                }
            </div>
        </div>
    </div>
</div>

