@{
    string name = Session["Name"] as string;
    string type = Session["Type"] as string;
}
<!doctype html>
<html lang="en">
<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        * {
            box-sizing: border-box;
            margin: 0px;
        }

        
        /* menu trái   */
        /*   */
        /*    */
        .right {
            margin:0;
            height:100%;
            float:right;
            align-content:center;
        }
        .container {
            display: grid;
            transition: width 0.7s ease-in-out;
            position: fixed;
            overflow-y: scroll;
            display: flex;
            flex-direction: column;
        }

        .item-menu {
            border-radius: 10px;
            margin: 10px 0px;
        }

        .icon-menu {
            color: white;
            cursor: pointer;
        }

        .item-menu:hover {
            background-color: rgb(92 86 86);
        }

        .link-menu {
            color: white;
            text-decoration: none;
        }

        .link-menu:hover {
            color: white;
            text-decoration: none;
        }
        @@media only screen and (max-width:767px) {
            .container {
                z-index: 2;
                width: 15%;
                border-radius:0 0 5px 0;
            }
            .item-menu{
                display:none;
            }
            .right{
                width:100%;
                padding:10% 5%;
            }
            .hidden {
                display: inline-block;
            }
            #icon-nav-menu{
                color:black;
            }
            .icon-menu {
                font-size: 1.3rem;
            }
        }

        @@media only screen and (min-width:768px) {
            .container {
                width: 18%;
                height: 100%;
                background-color: black;
               
            }
            .icon-menu {
                font-size: 2rem;
            }
            .right {
                width: 82%;
                padding: 2%;
            }
            .item-menu {
                width:100%;
                padding: 7%;
                display: flex;
                font-size: 1rem;
                justify-content: space-between;
            }
            .hidden {
                display: none;
            }
            /* thanh cuộn trong menu   */
            .container::-webkit-scrollbar-track {
                background: #000000; /* Màu nền của thanh cuộn */
            }

            .container::-webkit-scrollbar {
                width: 10px; /* Độ rộng của thanh cuộn */
            }

            .container::-webkit-scrollbar-thumb {
                background: #050505; /* Màu của thanh cuộn */
                border-radius: 5px;
            }

            .container:hover::-webkit-scrollbar-thumb {
                background-color: #5b5959; /* Màu nền của phần thân thanh cuộn khi container được hover */
            }
            /* hết thanh cuộn trong menu   */
        }
    </style>
    
</head>
<body>
    <div class="container">
        <i id="icon-nav-menu" class='icon-menu bx bx-menu'></i>
        <div class="item-menu">
            <i class='icon-menu bx bxs-home'></i>
            <a class="link-menu" href="~/Home/trangchu">Trang chủ</a>
        </div>
        <div class="item-menu">
            <i class='icon-menu bx bxs-bookmark-star'></i>
            <a class="link-menu" href="~/Home/GioiThieu">Giới thiệu</a>
        </div>
        <div class="item-menu">
            <i class='icon-menu bx bx-key'></i>
            <a class="link-menu" href="~/Login/Login">Đăng nhập</a>
        </div>






    </div>
    <div class="right">
        @RenderBody()
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script>
        var container = document.querySelector(".container");
        var isMenuOpen = false;
        var linkMenus = document.querySelectorAll(".link-menu");
        var windowWidth = window.innerWidth;
        var itemMenus = document.querySelectorAll(".item-menu");
        var iconMenu = document.getElementById("icon-nav-menu");

        document.getElementById("icon-nav-menu").addEventListener("click", function () {
            if (windowWidth < 768) {
                if (isMenuOpen) {
                    container.style.width = "15%";
                    iconMenu.style.color = "black";
                    container.style.backgroundColor = "white";
                    iconMenu.classList.remove("bx-collapse");
                    iconMenu.classList.add("bx-menu");
                    itemMenus.forEach(function (itemMenu) {
                        itemMenu.classList.remove("hidden");
                    });
                    isMenuOpen = false;
                }
                else {
                    container.style.width = "50%";
                    iconMenu.style.color = "white";
                    container.style.backgroundColor = "black";
                    iconMenu.classList.remove("bx-menu");
                    iconMenu.classList.add("bx-collapse");
                    itemMenus.forEach(function (itemMenu) {
                        itemMenu.classList.add("hidden");
                    });
                    isMenuOpen = true;
                }
            }
        });
    </script>
</body>
</html>