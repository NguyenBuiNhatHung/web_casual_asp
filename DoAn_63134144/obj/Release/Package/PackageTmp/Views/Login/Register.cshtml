
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5">
            <div class="card-body">
                <h2 class="card-title text-center mt-3">Đăng ký tài khoản User</h2>
                @using (Html.BeginForm("SendCode", "Login", FormMethod.Post, new { @class = "needs-validation" }))
                {
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="Nhập email" required>
                    </div>
                    <div class="form-group">
                        <label for="PhoneNumber">Số điện thoại:</label>
                        <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="Nhập số điện thoại" required>
                    </div>
                    @ViewBag.Message
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Gửi mã</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>